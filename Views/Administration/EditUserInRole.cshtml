@model List<IdentitySystem.ViewModels.UserRoleViewModel> 
@{
  ViewData["Title"] = "Edit User In Role";
  var roleId = ViewBag.roleId;
}

<h1>Edit User In Role</h1>


<form method="post">

  <div class="card">
    <div class="card-header">
      <h2>Add Or Remove user in this role</h2>
    </div>

    <div class="card-body">
      @for(int i = 0; i < Model.Count; i++)
      {
        <div class="form-check m-1">
          <input asp-for="@Model[i].UserID" type="hidden">
          <input asp-for="@Model[i].IsSelected" class="form-check-input" type="checkbox">
          <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
        </div>
      }
    </div>

    <div class="card-footer">
      <input type="submit" class="btn btn-primary" value="Update">
      <a asp-controller="Administration" asp-action="EditRole" asp-route-roleId="@roleId" class="btn btn-danger ml-3">Cancel</a>
    </div>
  </div>

</form>